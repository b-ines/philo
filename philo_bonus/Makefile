NAME = philo_bonus
CFLAGS = -pthread -Wall -Werror -Wextra -g3 -O0
DIR = src/
CFILES = $(DIR)main.c $(DIR)philo_routine.c $(DIR)utils.c $(DIR)lists.c \
		 $(DIR)init.c $(DIR)ft_atoi.c $(DIR)monitor_routine.c $(DIR)ft_itoa.c \
		 $(DIR)ft_strjoin.c
MAKEFLAGS += --no-print-directory
OFILES = $(CFILES:.c=.o)

all: $(NAME)

$(NAME): $(OFILES)
	@echo $(LB)[[ ðŸ’» Compiling...]]
	cc $(CFLAGS) $(OFILES) -o $(NAME)
	@echo $(LB) $(CAT)
	@echo $(LB)[[ Done ðŸ’» ]]

.o:.c
	cc $(CFLAGS) -c $< -o $@

clean: 
	@echo $(LB)[[ Clean ðŸ’» ]]
	@rm -f $(OFILES)

fclean: clean
	@rm -f $(NAME)

re: fclean all

rec: $(NAME) clean

.PHONY: all clean fclean re rec

LB = '\033[38;5;153m'

